# CRITICAL SECURITY CONFIGURATION
# Copy to .env.local and set actual values
# NEVER commit real values to version control

# JWT Security - REQUIRED FOR PRODUCTION
JWT_SECRET=generate_a_secure_256_bit_secret_key_here_minimum_32_characters

# Encryption Keys - Server-side only
ENCRYPTION_MASTER_KEY=server_side_master_encryption_key_256_bits
HIPAA_ENCRYPTION_KEY=hipaa_compliant_encryption_key_256_bits

# Database Security
DATABASE_ENCRYPTION_KEY=database_field_encryption_key_256_bits
DATABASE_URL=postgresql://user:password@localhost:5432/mentalhealth_secure

# API Security - Server-side only
OPENAI_API_KEY=server_side_openai_api_key
TWILIO_AUTH_TOKEN=server_side_twilio_auth_token
STRIPE_SECRET_KEY=server_side_stripe_secret_key

# Production Security Settings
NODE_ENV=production
CORS_ORIGIN=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Security Headers
CSP_REPORT_URI=https://your-domain.com/api/csp-report
SECURITY_CONTACT=security@your-domain.com

# Session Security
SESSION_SECRET=session_encryption_secret_256_bits
SESSION_TIMEOUT=900000  # 15 minutes for HIPAA compliance

# Monitoring & Logging
SENTRY_DSN_SERVER=server_side_sentry_dsn_for_backend
LOG_LEVEL=warn  # production should use warn or error

# CRITICAL: Remove all VITE_ prefixed API keys from client-side
# These should ONLY be available server-side:
# - No VITE_OPENAI_API_KEY
# - No VITE_TWILIO_AUTH_TOKEN 
# - No VITE_ENCRYPTION_KEY
# - No VITE_STRIPE_PUBLISHABLE_KEY (use server-side only)

# Client-side Configuration (safe for browser)
VITE_APP_NAME="CoreV4 Mental Health Platform"
VITE_APP_VERSION="4.0.0"
VITE_API_URL=https://api.your-domain.com
VITE_WS_URL=wss://ws.your-domain.com
VITE_SENTRY_DSN=client_side_sentry_dsn_public_key_only
VITE_FEATURE_CRISIS_CHAT=true
VITE_FEATURE_AI_THERAPIST=false  # Requires server-side API keys
VITE_CRISIS_HOTLINE=988
VITE_EMERGENCY_NUMBER=911