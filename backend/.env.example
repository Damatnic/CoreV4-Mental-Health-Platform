# CoreV4 Mental Health Platform Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URLS=http://localhost:5173,http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/corev4_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=corev4_db
DB_USER=corev4_user
DB_PASSWORD=secure_password

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-256-bit-refresh-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Configuration
ENCRYPTION_KEY=your-256-bit-encryption-key-for-pii-data
SALT_ROUNDS=12

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@corev4.health
SMTP_PASSWORD=your-email-password

# Twilio Configuration (for crisis SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Crisis Services Configuration
CRISIS_HOTLINE_API=https://api.crisishotlines.org
EMERGENCY_DISPATCH_API=https://api.emergency.gov
GEOLOCATION_API_KEY=your-geolocation-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
AUDIT_LOG_RETENTION_DAYS=2555

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:5173

# HIPAA Compliance
HIPAA_AUDIT_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
PHI_RETENTION_DAYS=2190
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# External APIs
OPENAI_API_KEY=your-openai-api-key
MENTAL_HEALTH_API_KEY=your-mental-health-api-key

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
S3_BACKUP_BUCKET=corev4-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Development/Testing
DEV_SKIP_AUTH=false
DEV_MOCK_CRISIS_SERVICES=false
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/corev4_test