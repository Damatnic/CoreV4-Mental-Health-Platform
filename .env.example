# CoreV4 Mental Health Platform - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="your-database-connection-string"
DATABASE_POOL_SIZE=10

# Push Notifications - VAPID Keys
# Generate your own VAPID keys using: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY="your-vapid-public-key-here"
VAPID_PRIVATE_KEY="your-vapid-private-key-here"

# Push Notification Settings
VITE_PUSH_NOTIFICATIONS_ENABLED=true
NOTIFICATION_BATCH_SIZE=100

# Analytics & Monitoring
VITE_ANALYTICS_ENABLED=true
VITE_PERFORMANCE_MONITORING=true
ANALYTICS_API_KEY="your-analytics-key"

# Crisis Support Configuration
CRISIS_HOTLINE_US="988"
CRISIS_TEXT_US="741741"
EMERGENCY_US="911"

# Feature Flags
VITE_VOICE_NAVIGATION=true
VITE_PWA_ENABLED=true
VITE_OFFLINE_MODE=true
VITE_PERFORMANCE_DASHBOARD=true

# Development Settings
NODE_ENV="development"
VITE_APP_VERSION="4.0.0"
VITE_DEBUG_MODE=false

# API Configuration
API_BASE_URL="https://api.your-domain.com"
API_TIMEOUT=10000

# Security Settings
JWT_SECRET="your-jwt-secret-here"
ENCRYPTION_KEY="your-encryption-key-here"
CORS_ORIGINS="http://localhost:3000,https://your-domain.com"

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY="pk_your_stripe_key"
GOOGLE_MAPS_API_KEY="your-google-maps-key"
SENTRY_DSN="your-sentry-dsn"

# Email Configuration
SMTP_HOST="your-smtp-host"
SMTP_PORT=587
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"
FROM_EMAIL="noreply@your-domain.com"

# Storage Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_TYPES="image/jpeg,image/png,image/gif,audio/mpeg,audio/wav"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms

# Crisis-specific Settings
CRISIS_RESPONSE_TIMEOUT=200  # ms - Maximum allowed crisis response time
SAFETY_PLAN_CACHE_TTL=86400  # 24 hours in seconds
EMERGENCY_CONTACTS_CACHE_TTL=3600  # 1 hour in seconds

# PWA Settings
PWA_THEME_COLOR="#E8F4FD"
PWA_BACKGROUND_COLOR="#F5F9FF"
PWA_START_URL="/"

# Mobile App Settings
MOBILE_FORCE_HTTPS=true
MOBILE_VIEWPORT_FIT="cover"
MOBILE_STATUS_BAR_STYLE="default"

# Performance Settings
BUNDLE_ANALYZER=false
PERFORMANCE_BUDGET_JS=500000  # 500KB
PERFORMANCE_BUDGET_CSS=100000  # 100KB
PERFORMANCE_BUDGET_IMAGES=1000000  # 1MB

# Accessibility Settings
A11Y_CONTRAST_RATIO=4.5
A11Y_FONT_SIZE_MIN=14
A11Y_TOUCH_TARGET_MIN=44

# Backup & Recovery
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring & Alerts
HEALTH_CHECK_INTERVAL=60000  # 1 minute
ALERT_EMAIL="admin@your-domain.com"
UPTIME_THRESHOLD=99.9

# Legal & Compliance
PRIVACY_POLICY_VERSION="1.0"
TERMS_VERSION="1.0"
GDPR_ENABLED=true
CCPA_ENABLED=true

# Cache Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL=300  # 5 minutes
STATIC_CACHE_TTL=2592000  # 30 days

# Content Security Policy
CSP_REPORT_URI="/api/csp-report"
CSP_REPORT_ONLY=false