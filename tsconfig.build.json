{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test/**/*",
    "e2e/**/*",
    "agent-system/**/*"
  ]
}